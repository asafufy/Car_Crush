<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layoutDirection="ltr"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/panel_IMG_heart1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"

            android:src="@drawable/img_heart" />

        <ImageView
            android:id="@+id/panel_IMG_heart2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/panel_IMG_heart1"
            android:layout_toEndOf="@id/panel_IMG_heart1"
            android:layout_marginStart="8dp"

            android:src="@drawable/img_heart" />

        <ImageView
            android:id="@+id/panel_IMG_heart3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/panel_IMG_heart1"
            android:layout_toEndOf="@id/panel_IMG_heart2"
            android:layout_marginStart="8dp"

            android:src="@drawable/img_heart" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="#FFFF00"

        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/panel_rlroad1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF0000"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/panel_IMG_car1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/img_race_car" />

            <ImageView
                android:id="@+id/panel_IMG_obstacle11"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:src="@drawable/img_obstacle" />
            <ImageView
                android:id="@+id/panel_IMG_obstacle12"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="190dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/img_obstacle" />
            <ImageView
                android:id="@+id/panel_IMG_obstacle13"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="350dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/img_obstacle" />
            <ImageView
                android:id="@+id/panel_IMG_obstacle14"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/img_obstacle" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFAA">

            <ImageView
                android:id="@+id/panel_IMG_car2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:src="@drawable/img_race_car"
                />

            <ImageView
                android:id="@+id/panel_IMG_obstacle21"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:src="@drawable/img_obstacle" />
            <ImageView
                android:id="@+id/panel_IMG_obstacle22"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="190dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/img_obstacle" />
            <ImageView
                android:id="@+id/panel_IMG_obstacle23"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="350dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/img_obstacle" />
            <ImageView
                android:id="@+id/panel_IMG_obstacle24"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/img_obstacle" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#AAFFAA"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/panel_IMG_car3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/img_race_car" />

            <ImageView
                android:id="@+id/panel_IMG_obstacle31"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:src="@drawable/img_obstacle" />
            <ImageView
                android:id="@+id/panel_IMG_obstacle32"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="190dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/img_obstacle" />
            <ImageView
                android:id="@+id/panel_IMG_obstacle33"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="350dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/img_obstacle" />
            <ImageView
                android:id="@+id/panel_IMG_obstacle34"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/img_obstacle" />


        </RelativeLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal">


        <ImageView
            android:id="@+id/panel_IMG_left_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/img_left_arrow" />
        <ImageView
            android:id="@+id/panel_IMG_right_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/panel_IMG_left_arrow"
            android:rotation="180"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/img_left_arrow" />





    </RelativeLayout>



</LinearLayout>